// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  price       Float
  modelUrl    String
  createdAt   DateTime @default(now())
}

model FeaturedCar {
  id        Int      @id @default(autoincrement())
  modelUrl  String
  uploadedAt DateTime @default(now())
}
